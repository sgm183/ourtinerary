<% if @trip.errors.any? %>
  <h2>The following errors prevented the trip from being saved</h2>
  <ul>
	<% @trip.errors.full_messages.each do |msg| %>
	   <li><%= msg %></li>
	<% end %>

  </ul>

<% end %>

<%= form_for @trip do |f| %>
  <p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :destination %><br>
	<%= f.text_area :destination %>
  </p>
  <p>
    <%= f.label :user %><br>
	<%= f.text_field :user %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Back to Trips", trips_path() %>
